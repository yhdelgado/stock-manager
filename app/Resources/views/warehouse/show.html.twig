{% extends 'base.html.twig' %}

{% block body %}
	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>Warehouse</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="{{ path('homepage')}}">Home</a>
							</li>
							<li class="breadcrumb-item">
								<a href="#">Warehouse</a>
							</li>
						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>

		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div class="row">
					<div
						class="col-12">
						<!-- Default box -->
						<div class="card">
							<div class="card-header">
								<h3 class="card-title">{{warehouse.name}}</h3>
							</div>
							<div class="card-body">
								<p>
									<strong>Name:</strong>
									{{warehouse.name}}</p>
								<p>
									<strong>Owner:</strong>
									{{warehouse.owner}}</p>
								<p>
									<strong>Address:</strong>
									{{warehouse.address}}</p>
								<p>
									<strong>Phone:</strong>
									{{warehouse.phone}}</p>
								<p>
									<strong>Latitude:</strong>
									{{warehouse.latitude}}</p>
								<p>
									<strong>Longitude:</strong>
									{{warehouse.longitude}}</p>
							</div>
							<!-- /.card-body -->
							<div class="card-footer">
								<a href="/warehouse/edit/{{warehouse.id}}" class="btn btn-primary">Edit</a>
								<a href="/warehouse/delete/{{warehouse.id}}" class="btn btn-danger">Delete</a>
							</div>
							<!-- /.card-footer-->
						</div>
						<!-- /.card -->
					</div>
				</div>
			</section><!-- /.content --></div><!-- /.content-wrapper -->{% endblock %}
	{% block stylesheets %}{}
	{% endblock %}
