			<!-- /.container-fluid -->
		</section>

		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div class="row">
					<div
						class="col-12">
						<!-- Default box -->
						<div class="card">
							<div class="card-body">
